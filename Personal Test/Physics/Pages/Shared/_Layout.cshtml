<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Physics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Physics.styles.css" asp-append-version="true" />
</head>

<body style="background-color: #001c57;">
    <header style="background-color:#303030;">
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-transparent border-bottom box-shadow mb-3">
            <a href="/#" style="color:#FEBE10; display:flex; border-width: 0px;">Home</a>
            <div class="header-dropdown">
                <a style="color:#FEBE10; border-width: 0px;" href="#" class="dropdown">Physics</a>
                <ul class="dropdown-menu">
                    <li><a href="">Classical Mechanics</a>
                        <ul class="sub-dropdown-menu">
                            <li>Newton's Laws</li>
                        </ul>
                    </li>
                    <li><a href="">Electromagnetism</a></li>
                    <li><a href="">Thermodynamics</a></li>
                </ul>
                <a style="color:#FEBE10;" href="#" class="dropdown">Linux</a>
                <ul class="dropdown-menu">
                    <li><a href="">Linux Command Line</a></li>
                    <li><a href="">Downloading Tools</a></li>
                    <li><a href="">Choosing a Distribution</a></li>
                    <li><a href="">Customizing your Environment</a></li>
                    <li><a href="">App Alternatives</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 0px; border: 0px; text-align: left; width: 100%;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Physics - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>